<%- include('layout') %>

<h1><%= task ? "Edit Task" : "New Task" %></h1>

<form action="<%= task ? '/tasks/' + task._id + '?_method=PUT' : '/tasks' %>" method="POST">

    <input type="text" name="title" placeholder="Task Title" value="<%= task ? task.title : '' %>" required>

    <textarea name="description" placeholder="Task Description"><%= task ? task.description : '' %></textarea>

    <button type="submit"><%= task ? "Update" : "Create" %></button>

</form>

<a href="/tasks">Back to Dashboard</a>