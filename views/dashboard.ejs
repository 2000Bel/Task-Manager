
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard-Task Manager</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="dashboard-container">
        <h1>Tasks list</h1>
        <ul>
          <% tasks.forEach(task => { %>
            <li>
              <input type="checkbox" name="selectedTask" value="<%= task._id %>" />
              <strong><%= task.title %></strong> - <%= task.description %>
              <a href="/tasks/<%=task._id%>/edit"><button>Edit</button></a>
              <form action="/tasks/<%= task._id %>?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit">Delete</button>
              </form>
            </li>
          <% }) %>
        </ul>
        <a href="/tasks/new"><button>Add</button></a>
        <a href="/logout"><button>Logout</button></a>
      </div>
</body>
</html>
